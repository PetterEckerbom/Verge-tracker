  body
    //Imports bootstap etc.
    script(src='https://code.jquery.com/jquery.min.js')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', rel='stylesheet', type='text/css')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
    script(src='/simple.js')
    //To show that you can use the link directly it is displayed in top of screen.
    div.alert.alert-success
      p Use this link to get directly to this page: 
        a.alert-link#link_href
          b#link
    //Simple bootstrap list with all the values calculated in app.js
    ul.list-group
      li.list-group-item 
        p Price:   #{satoshi}
      li.list-group-item 
        p Price:   #{verge_price}
      li.list-group-item 
        p Quantity:  #{total_verge}
      li.list-group-item 
        p BTC value: #{total_value}
      li.list-group-item 
        p LTC value: #{total_LTC}
      li.list-group-item 
        p ETH value: #{total_ETH}
      if (new_price)
        li.list-group-item 
          p Fiat value: #{currency_value}
      else
        li.list-group-item 
          p Fiat value: #{USD_value}
      if (change24h >= 0)
        li.list-group-item 
          p.green Net 24h: +#{change24h} #{type}
      else
        li.list-group-item 
          p.red Net 24h:  #{change24h} #{type}
    div.alert.alert-info.infobox
