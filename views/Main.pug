html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=719px')
    link(rel='stylesheet', media='screen and (min-width: 720px)', type='text/css', href='/generic.css')
    link(rel='stylesheet', type='text/css', media='screen and (max-width: 720px )', href='/mobile.css')
    link(rel='apple-touch-icon', sizes='180x180', href='/apple-touch-icon.png')
    link(rel='icon', type='image/png', sizes='32x32', href='/favicon-32x32.png')
    link(rel='icon', type='image/png', sizes='16x16', href='/favicon-16x16.png')
